---
interface Props {
	href?: string;
	variant?: 'primary' | 'secondary';
	class?: string;
}

const { href, variant = 'primary', class: className = '' } = Astro.props;

const baseStyles =
	'inline-block px-6 py-2 rounded-full font-medium transition-all duration-300 hover:scale-102 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-primary-cyan/40';

const variants = {
	primary:
		'bg-gradient-to-br from-[#56C2F0] via-[#4F88D1] to-[#A056F0] text-white shadow-[#56C2F0]/30 hover:shadow-[#56C2F0]/50',
	secondary: 'bg-black/50 backdrop-blur-sm text-white hover:bg-black/70',
};

const isLink = typeof href === 'string' && href.length > 0;
---
{isLink ? (
	<a href={href} class={`${baseStyles} ${variants[variant]} ${className}`}>
		<slot />
	</a>
) : (
	<button type="submit" class={`${baseStyles} ${variants[variant]} ${className}`}>
		<slot />
	</button>
)}
