---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import logo from '../assets/logo_tauro.png';

const currentPath = Astro.url.pathname;
const navLinks = [
	{ href: '/whatsapp', label: 'WhatsApp', page: true },
	{ href: '/sms', label: 'SMS', page: true },
	{ href: '/#solucoes', label: 'Soluções', page: false },
];
---

<header
	transition:persist
	class='fixed top-0 left-0 right-0 z-50 bg-black/90 backdrop-blur-sm'
>
	<nav class='container mx-auto px-5 py-3'>
		<div class='flex items-center justify-around gap-4'>
			<!-- Logo -->
			<a href='/' class='flex items-center gap-2 group'>
				<Image
					src={logo}
					alt='Logo Tauro'
					class='max-w-[120px] hover:scale-110 transition-transform duration-300'
				/>
			</a>

			<!-- Navigation -->
			<ul class='hidden md:flex items-center gap-6'>
				{navLinks.map(link => (
					<li>
						<a
							href={link.href}
							class={`text-white/90 hover:text-primary-cyan transition-colors duration-300 relative group ${
								link.page && currentPath === link.href ? 'text-primary-cyan' : ''
							}`}
						>
							{link.label}
							<span
								class={`absolute bottom-0 left-0 h-0.5 bg-primary-cyan transition-all duration-300 ${
									link.page && currentPath === link.href ? 'w-full' : 'w-0 group-hover:w-full'
								}`}
							></span>
						</a>
					</li>
				))}
				<!-- CTA Button -->
				<Button href='#contato'> Fale Conosco </Button>
			</ul>

			<!-- Mobile Menu Button -->
			<!-- <button
				class='md:hidden text-white'
				aria-label='Menu'
			>
				<svg
					class='w-6 h-6'
					fill='none'
					stroke='currentColor'
					viewBox='0 0 24 24'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'
						d='M4 6h16M4 12h16M4 18h16'
					></path>
				</svg>
			</button> -->
		</div>
	</nav>
</header>
